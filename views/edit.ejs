<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>

<body>
    <button id="promptNewToDo">+</button>
    <div>
        <ul>
            <% for(let toDoItem of foundToDoItem) { %>
                <li>
                    <div>
                        <form method="POST" action="/edit/<%=toDoItem._id%>?_method=PATCH">
                            <input name = "content" type="text" value="<%=toDoItem.content%>">
                            <button>Submit</button>
                        </form>
                        <button class="dropDownButton">Dropdown</button>
                    </div>
                </li>
                <% } %>
        </ul>
    </div>
    <form id="newToDoForm" action="/" method="POST">
        <input name="newToDo" type="text">
        <button id="submitNewToDo" type="submit" hidden>+</button>
    </form>
    <script type="text/javascript" , src='/client.js'> </script>

</body>

</html>